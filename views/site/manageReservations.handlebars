<div class="Success"> {{success}} </div>
{{/if}}
{{#if error}}
<div class="Error"> ERROR: {{error}}</div>
{{/if}}

<h2>Manage Reservations</h2>
<form method="POST" action="/seats/createSchedule" id="createSchedule">
    <label id="dayLabel" for="day">
        Choose the day you wish to add:
        <select name="day" id="day">
            <option value="mon">Monday</option>
            <option value="tues">Tuesday</option>
            <option value="wed">Wednesday</option>
            <option value="thur">Thursday</option>
            <option value="fri">Friday</option>
            <option value="sat">Saturday</option>
            <option value="sun">Sunday</option>
        </select>
    </label>
    <label id="itemName_label" for="itemName">
        Number of seats available each hour:
        <input name="numSeats" type="text" id="numSeats" />
    </label>
    <button type="submit">Submit</button>
</form>

