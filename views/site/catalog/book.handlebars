<!-- Still a work in progress (Harrison) -->
<a href="/catalog">Back to Book Catalog</a>
<h2>{{book.bookName}}</h2>
<h4>Likes: {{book.likes}} Dislikes: {{book.dislikes}}</h4>
<img alt="{{book.bookName}}" src="{{book.image}}">
<dl>
    <dt>
        <p>Number of copies avaliable: {{book.numCopies}}</p>
    </dt>
    <dt>
        <p>Reviews:</p>
    </dt>
    <dd>
        {{#if book.reviews}}
        <dl>
            {{#each book.reviews}}
            <div class="reviews">
                <dt>Review from {{this.Reviewer_name}}:</dt>
                <dd>Rating: {{this.Rating}}/5 stars</dd>
                <dd>{{this.Reviewer_name}} wrote: {{this.Summary}}</dd>

                {{#if this.Comments}}
                
                    <dd>Comments:</dd>
                    <dd>
                        <div class="commentsComponent">
                        <dl>
                            {{#each this.Comments}}
                            <div class="comments">
                                <dt>{{this.Commenter_name}} found this review {{this.Helpful_Review}}!</dt> <dd>Their comment:
                                    {{this.Comment_data}}</dd>
                            </div>
                            {{/each}}
                        </dl>
                        </div>
                    </dd>
                    {{/if}}
                    <dd><a href="/bookReviewsComments/{{this._id}}">Would you like to comment?</a></dd>
            </div>
            {{/each}}
        </dl>
        {{else}}
        <h5>None yet!</h5>
        {{/if}}
    </dd>
</dl>
<a href="/bookReviews/{{book._id}}">Would you like to write a review?</a>